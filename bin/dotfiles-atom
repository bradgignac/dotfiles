#! /usr/bin/env bash

log () {
  echo -e "\e[1m==> $@\e[0m"
}

error () {
  echo -e "\e[31;1m$@\e[0m"
}

PACKAGES="atom-typescript autocomplete-plus editorconfig emmet go-plus language-ejs language-docker language-lua language-terraform linter linter-eslint linter-flake8 monokai react"

if ! command -v apm > /dev/null 2>&1; then
  error "apm is not installed!"
  exit 1
fi

log "Installing Atom packages..."
for package in $PACKAGES; do
  apm install $package
done
