#! /usr/bin/env bash

log () {
  echo -e "\e[1m==> $@\e[0m"
}

if command -v brew > /dev/null 2>&1; then
  log "Updating Homebrew..."
  brew update
else
  log "Installing Homebrew..."
  ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
fi

log "Installing from Brewfile..."
brew bundle
brew cleanup
brew cask cleanup
